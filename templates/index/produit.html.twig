        <div class="col-md-8">
          <div class="post-box">
            <div class="post-thumb">
              <div id="carousel" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
      </ol>
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img class="d-block w-100" src="img/post-2.jpg" alt="First slide">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="img/post-3.jpg" alt="Second slide">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="img/post-1.jpg" alt="Third slide">
        </div>
      </div>
      <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>

    </div>
            <div class="post-meta">
              <h1 class="article-title">{{ produit.name }}</h1>
              <ul>
                <li>
                  <span class="ion-ios-person"></span>
                  <a href="#">{{ produit.date | date('d/m/Y') }}</a>
                </li>
                <li>
                  <span class="ion-pricetag"></span>
                  <a href="#">Référence : {{ produit.reference }} </a>
                </li>
                <li>
                  <span class="ion-chatbox"></span>
                  <a href="#">Marque : {{ produit.marque }}</a>
                </li>
                <li>
                  <span class="ion-chatbox"></span>
                  <a href="#">Etat : {{ produit.etat }}</a>
                </li>
              </ul>
            </div>
            <div class="article-content">
              <p class="lead">
                {{ produit.description | summarize }}
              </p>


              <div class="onglet">
                <nav class="nav nav-tabs tabsfont">
                  <a class="nav-item nav-link active lead" href="#p1" data-toggle="tab"> {{ produit.applicationDiagram | summarize}} </a>
                  <a class="nav-item nav-link lead" href="#p2" data-toggle="tab"> {{ produit.specification | summarize }} </a>
                  <a class="nav-item nav-link lead" href="#p3" data-toggle="tab"> {{ produit.technicalSpe | summarize }} </a>
                  <a class="nav-item nav-link lead" href="#p4" data-toggle="tab"> {{ produit.protocol | summarize }} </a>
                  <a class="nav-item nav-link lead" href="#p5" data-toggle="tab">{{ produit.security | summarize }}</a>
                </nav>



                <div class="tab-content">
                  <div class="tab-pane active " id="p1">
                    <p class="lead">{{ produit.description | summarize }} </p>
                  </div>
                  <div class="tab-pane " id="p2">
                    <p class="lead">{{ produit.description | summarize }} </p>
                    <p class="lead"> {{ produit.description | summarize }} </p>
                    <p class="lead"> {{ produit.description | summarize }} </p>
                    <p class="lead"> {{ produit.description | summarize }} </p>
                  </div>
                </div>
              </div>
              {#{% endfor %}#}
