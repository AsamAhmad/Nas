{% extends "layout.html.twig" %}
{% block title %}
{{ produit.name }}
{% endblock %}

{#{% set active = produit.categorie.slug %}#}


{#{% block page_title %}
{{ produit.name }}
{% endblock %}  #}


{% block content %}


  <!--/ Intro Skew Star /-->
  <div class="intro intro-single bg-image">
    <div class="overlay-mf"></div>
    <div class="intro-content display-table">
      <div class="table-cell">
        <div class="container">
          <h2 class="intro-title mb-4"> {{ produit.name }} </h2>


          <ol class="breadcrumb d-flex justify-content-center">
            <li class="breadcrumb-item">
              <a href="{{ path('index') }}">Accueil</a>
            </li>
            <li class="breadcrumb-item">
              <a href="{{ path('allproduct') }}">Produits</a>
            </li>
            <li class="breadcrumb-item active">{{ produit.name }}</li>
          </ol>


        </div>
      </div>
    </div>
  </div>
  <!--/ Intro Skew End /-->

  <!--/ Section Blog-Single Star /-->
  <section class="blog-wrapper sect-pt4" id="blog">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div class="post-box">
            <div class="post-thumb">
              <div id="carousel" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
      </ol>
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img class="d-block w-100" src="{{ asset('img/' ~ produit.image1 ) }}" alt="First slide">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="{{ asset('img/' ~ produit.image2 ) }}" alt="Second slide">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="{{ asset('img/' ~ produit.image3 ) }}" alt="Third slide">
        </div>
      </div>
      <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>

    </div>
            <div class="post-meta">
              <h1 class="article-title">{{ produit.name }}</h1>
              <ul>
                <li>
                  <span class="ion-ios-calendar"></span>
                  <a href="#">{{ produit.date | date('d/m/Y') }}</a>
                </li>
                <li>
                  <span class="ion-pricetag"></span>
                  <a href="#">Référence : {{ produit.reference }}</a>
                </li>
              </ul>
            </div>
            <div class="article-content">
              <p class="lead">
              {{ produit.description }}
              </p>
              
            
            {#{ produit.description | summarize }#}
            
              <div class="onglet">
                <nav class="nav nav-tabs tabsfont">
                  <a class="nav-item nav-link active" href="#p1" data-toggle="tab"> APPLICATION DIAGRAM </a>
                  <a class="nav-item nav-link " href="#p2" data-toggle="tab">SPECIFICATION</a>
                  <a class="nav-item nav-link " href="#p3" data-toggle="tab">TECHNICAL SPE</a>
                  <a class="nav-item nav-link " href="#p4" data-toggle="tab">PROTOCOL</a>
                  <a class="nav-item nav-link " href="#p5" data-toggle="tab">SECURITY</a>
                </nav>
                

                <div class="tab-content">
                  <div class="tab-pane active" id="p1">
                  <div class="mx-auto col-md-10 text-center">
                    <p class="lead"> {{ produit.applicationDiagram }}</p>
                    </div>
                  </div>
                  <div class="tab-pane" id="p2">
                    <p class="lead"> {{ produit.SPECIFICATION }}</p>
                  </div>
                  <div class="tab-pane" id="p3">
                    <p class="lead"> {{ produit.TECHNICALSPE }}</p>
                  </div>
                  <div class="tab-pane" id="p4">
                    <p class="lead"> {{ produit.PROTOCOL }}</p>
                  </div>
                  <div class="tab-pane" id="p5">
                    <p class="lead"> {{ produit.SECURITY }}</p>
                  </div>

                </div>
              </div>

            </div>
            </div>
          </div>
          </div>

{% endblock %}